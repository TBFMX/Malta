<h1>Listing recipes</h1>

  <table>
    <thead>
      <tr>
        <th>Juice</th>
        <th>Ingredient</th>
        <th>Portion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @recipes.each do |recipe| %>
        <tr>
          <% unless recipe.juice.nil? %>
           <td><%= recipe.juice.name %></td>
          <% else %>
           <td></td>
          <% end %>
          <% unless recipe.ingredient.nil? %>
            <td><%= recipe.ingredient.name %></td>
          <% else %>  
            <td></td>
          <% end %> 
          <td><%= recipe.portion %></td>
          <td><%= link_to 'Show', recipe %></td>
          <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
          <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Recipe', new_recipe_path %>
