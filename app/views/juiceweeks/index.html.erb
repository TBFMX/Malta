      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @juiceweeks.each do |juiceweek| %>
      <tr>
        <td><%= juiceweek.date %></td>
        <% puts juiceweek.inspect%>
        <% unless juiceweek.juicer.nil? %>
          <td><%= juiceweek.juicer.name %></td>
        <% else %>
           <td></td>
          <% end %>
        <% unless juiceweek.juice.nil? %>
        <td><%= juiceweek.juice.name %></td>
        <% else %>
           <td></td>
          <% end %>

        <td><%#= link_to 'Show', juiceweek %></td>
        <td><%= link_to 'Edit', edit_juiceweek_path(juiceweek) %></td>
        <td><%= link_to 'Destroy', juiceweek, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

