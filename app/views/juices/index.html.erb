<h1>Listing juices</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Recipe</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @juices.each do |juice| %>
      <tr>
        <td><%= juice.name %></td>
        <td><%= juice.recipe_id %></td>
        <td><%= link_to 'Show', juice %></td>
        <td><%= link_to 'Edit', edit_juice_path(juice) %></td>
        <td><%= link_to 'Destroy', juice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Juice', new_juice_path %>
